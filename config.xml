<?xml version="1.0" encoding="UTF-8" ?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "org.dossou.app.meteoTrack"
        versionCode="1" 
        version   = "1.0.0">

    <!-- versionCode is optional and Android only -->

    <name>MeteoTrack</name>

    <description>
        Météo sur les circuit français
    </description>

    <author href="http://meteoTrack.app.dossou.org" email="damien.fourcade@gmail.com">
        Capetot 2k13
    </author>

	<feature name="http://api.phonegap.com/1.0/device" />
    <feature name="http://api.phonegap.com/1.0/geolocation"/>
	
	<preference name="fullscreen" value="true" />
    <preference name="orientation" value="portrait" />
    <preference name="phonegap-version" value="2.7.0" />
    <preference name="exit-on-suspend" value="true" />

	<icon src="icon.png" />

    <gap:splash src="splash.png" />
    <gap:splash src="splash/ios/splash.png" gap:platform="ios" width="768" height="1024" />
</widget>